# Copy to .env and fill in your values. Do not commit .env.

# Email (IMAP) - e.g. Gmail: imap.gmail.com, use App Password
IMAP_SERVER=imap.gmail.com
EMAIL_USER=
EMAIL_PASSWORD=

# Redis - use localhost when running without Docker
REDIS_HOST=localhost
REDIS_PORT=6379

# Database - Supabase Postgres (persister, show_subscriptions). From Supabase: Project Settings → Database
DB_HOST=
DB_PORT=5432
DB_NAME=postgres
DB_USER=
DB_PASSWORD=

# Supabase API (watcher worker, scripts/add_watcher.py). From Supabase: Project Settings → API
SUPABASE_URL=
SUPABASE_API_KEY=

# Voyage AI (watcher, add_watcher). Optional: VOYAGE_MODEL=voyage-3.5-lite
VOYAGE_API_KEY=

# Watcher: set to 1 to only match emails already in email_embeddings (no Voyage calls). Use for testing on a budget.
# WATCHER_CACHE_ONLY=0

# Claude (classifier)
CLAUDE_API_KEY=

# Optional: default mailbox for add_watcher CLI
# MAILBOX_ID=your@email.com
