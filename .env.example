# Phase 0: Environment Variables Template
# Copy this file to .env and fill in your actual values

# === Email Configuration (Phase 3+) ===
# IMAP server settings for fetching emails
IMAP_SERVER=imap.gmail.com
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# === Database Configuration (Phase 1+) ===
# Postgres connection (matches compose.yml settings)
POSTGRES_DB=email_pipeline
POSTGRES_USER=pipeline_user
POSTGRES_PASSWORD=pipeline_pass
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# === Message Queue Configuration (Phase 2+) ===
# Redis connection settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# === AI Classification (Phase 5+) ===
# Claude API for email classification
CLAUDE_API_KEY=your-claude-api-key-here

# === Observability (Phase 8+) ===
# OpenTelemetry and metrics (optional for Phase 0)
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
# PROMETHEUS_PORT=9090